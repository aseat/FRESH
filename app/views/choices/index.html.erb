<%= render "devise/shared/header" %>
<% if @questions.answerd.id == @choice.choose.id %>
<h5>正解！</h5>
<div class="col" style="padding-left: 280px;padding-top: 10px;width: 1200px;">
<div class="card shadow-sm2">
<%= "問."%>
<%= @questions.problem %>
<p>
<%= current_user.nickname %>
<%= "さんの答え：" %>
<%= @choice.choose.name %>
<p>
<%= "正解："%>
<%= @questions.answerd.name %>
<p>
<%= "解説："%>
<%= @questions.commentary %>
</div>
<%= link_to'戻る',questions_path,class:'btn btn-sm btn-outline-secondary'%>
</div>
</div>
<% else %>
<h6>残念！</h6>
<div class="col" style="padding-left: 280px;padding-top: 10px;width: 1200px;">
<div class="card shadow-sm2">
<%= "問."%>
<%= @questions.problem %>
<p>
<%= current_user.nickname %>
<%= "さんの答え：" %>
<%= @choice.choose.name %>
<p>
<%= "正解："%>
<%= @questions.answerd.name %>
<p>
<%= "解説："%>
<%= @questions.commentary %>
</div>
<%= link_to'戻る',questions_path,class:'btn btn-sm btn-outline-secondary'%>
</div>
</div>
<% end %>
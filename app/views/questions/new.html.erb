<%= render "devise/shared/header" %>

<body>
  <div class=container>
  <h2>◯×問題 投稿</h2>
  <div class='form-wrapper'>
 <%= form_with model: @question, local: true do |f| %>
<div class="field form-group">
<%= f.label :category, "カテゴリー(必須)" %><br />
<%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"category"}) %>
</p>
    <p>
    <div class="field form-group">
      <%= f.label :problem, "問題文(必須)" %><br />
    <%= f.text_area :problem, id:"inputFile",class:"form-control" ,type:"text", id:"article_title",rows:"5" %>
    </div>
   <p>
   <div class="field form-group">
      <%= f.label :commentary, "解説(必須)" %><br />
    <%= f.text_area :commentary, id:"inputFile",class:"form-control" ,type:"text", id:"article_title",rows:"5" %>
    </div>
     <p>
   <div class="field form-group">
      <%= f.label :answerd, "答え(必須)" %><br />
   <%= f.collection_select(:answerd_id, Answerd.all, :id, :name, {}, {class:"select-box", id:"category"}) %>
    </div>
 <p>

<div class="field">
    <label>画像(任意)</label><br />
    <%= f.file_field :image, id:"inputFile" %>
  </div>
   <% end %> 
<p>
    <div class="actions text-right">
      <input type="submit" name="commit" value="投稿する" class="btn-default red-round-btn" data-disable-with="投稿する" />
    <a class="btn-default cancel-round-btn" href="/ways">キャンセル</a>
    </div>
</form></div>
</body>
<div class="container">
  <header class="blog-header py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 text-center">
        <a class="blog-header-logo text-dark" href="/">試験方法 編集</a>
      </div>
</header>

<body>
  <div class=container>
  <h2>試験方法投稿</h2>
  <div class='form-wrapper'>
  <%= form_with model: @way, local: true do |f| %>

    <div class="field form-group">
      <%= f.label :name, "試験名(必須)" %><br />
       <%= f.file_field :name, id:"inputFile",class:"form-control" ,type:"text", id:"article_title" %>
    </div>
    <p>
    <div class="field form-group">
      <%= f.label :text, "説明、方法(必須)" %><br />
    <%= f.text_area :text, id:"inputFile",class:"form-control" ,type:"text", id:"article_title",rows:"5" %>
    </div>

    <p>
    <div class="field form-group">
      <%= f.label :youtube_url, "参考動画（YouTube）のURL(任意)" %><br />
      <%= f.file_field :youtube_url, class:"form-control1", type:"text" ,id:"article_youtube_url",placeholder:"You TubeをURLを入力してください" %>
    </div>
<p>
<div class="field">
    <%= f.label :image, "画像(任意)" %><br />
    <%= f.file_field :image, id:"inputFile" %>
  </div>
<p>
  <div class="field">
    <%= f.label :video, "動画(任意)" %><br />
    <%= f.file_field :video, id:"inputFile" %>
  </div>
  
<p>
    <div class="actions text-right">
      <%= f.submit "投稿する",class:"btn-default red-round-btn"%>
     </div>
     <p>
     </p>
    <%=link_to 'キャンセル', ways_path, class:"btn-default cancel-round-btn" %>
<% end %> 
</form></div>
</body>
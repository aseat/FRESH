<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class="field">
<label>ニックネーム</label><br />
<%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
</div>

  <div class="field">
    <label>メールアドレス</label><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>

<div class="field">
<label>自己紹介</label><br />
<%= f.text_area :text, autofocus: true, autocomplete: "text" %>
</div>

  <div class="field">
    <label>パスワード</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label>パスワード (確認)</label><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

<div>
  <div class="field">
    <label>プロフィール画像</label><br />
    <%= f.file_field :image, id:"inputFile" %>
  </div>

<p>
<% end %>
<%= render "devise/shared/header" %>
<p>
<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div>

<div class="field">
<label>ニックネーム</label><br />
<%= f.text_area :nickname, id:"inputFile",class:"form-control4" ,type:"text", id:"article_title",rows:"10", cols:"60" %>
</div>

  <div class="field">
    <label>メールアドレス</label><br />
    <%= f.email_field :email,id:"inputFile",class:"form-control4" ,type:"text", id:"article_title",rows:"10", cols:"60" %>
  </div>

  <div>

<div class="field">
<label>自己紹介</label><br />
<%= f.text_area :text,id:"inputFile",class:"form-control2" ,type:"text", id:"article_title",rows:"10", cols:"60" %>
</div>

  <div class="field">
    <label>パスワード</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password,id:"inputFile",class:"form-control2" ,type:"text", id:"article_title",rows:"10", cols:"60" %>
  </div>

  <div class="field">
    <label>パスワード (確認)</label><br />
    <%= f.password_field :password_confirmation, id:"inputFile",class:"form-control2" ,type:"text", id:"article_title",rows:"10", cols:"60" %>
  </div>

<div>
  <div class="field">
    <label>プロフィール画像</label><br />
    <%= f.file_field :image, id:"inputFile" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= render "devise/shared/header" %>

<%= search_form_for(@p, url: answers_search_path, class: "form-control5")  do |f| %>

<%= f.collection_select :category_id_eq, Category.all, :id, :name %>
<%= f.submit '検索',class:"btn btn-sm btn-outline-third" %>
<%= link_to"新規投稿",new_answer_path,class:"btn btn-sm btn-outline-third"%>
<% end %>

</div>
<p>
<h7>回答受付中のQ&A</h7>
<% @answer.each do |answer| %>
<div class="col" style="padding-left: 280px;padding-top: 10px;width: 1200px;">
<div class="card shadow-sm">
<%= link_to answer.title,answer_path(answer.id) %>
<%= answer.question %>
<%= answer.category.name %>
</div>
</div>
<% end %>


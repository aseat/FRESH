<%= render "devise/shared/header" %>
<%= form_with(url: search_answers_path, local: true, method: :get, class: "form-control3") do |form| %>
  <%= form.text_field :keyword, placeholder: "質問内容を検索する", class: "search-input" %>
  <%= form.submit '検索',class:"btn btn-sm btn-outline-third" %>
<%= link_to"新規投稿",new_answer_path,class:"btn btn-sm btn-outline-third"%>
<% end %>
</div>
<p>
<% if @answers.length !=0 %>

<% @answers.each do |answer| %>
<div class="col" style="padding-left: 280px;padding-top: 10px;width: 1200px;">
<div class="card shadow-sm">

<%= "タイトル: " %><%= link_to answer.title,answer_path(answer.id) %>
<p>
<%= "質問: " %><%= answer.question %>
<p>
<%= "カテゴリー: " %><%= answer.category.name %>
</div>
</div>
<% end %>
<% else %>
<h1 style="text-align: center">検索結果なし</h1>
<% end %>
<%= link_to '戻る', answers_path,class:"btn btn-sm btn-outline-third",style: "margin-left: 280px;" %>
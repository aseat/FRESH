<%= render "devise/shared/header" %>
<div class="form-control" style="padding-left: 530px;">
<%= search_form_for(@p, url: answers_search_path) do |f| %>
 
  <%= f.collection_select :category_id_eq, Category.all, :id, :name,class:"form-control" %>
  
  <%= f.submit '検索',class:"btn btn-sm btn-outline-third" %>
  <%= link_to"新規投稿",new_answer_path,class:"btn btn-sm btn-outline-third"%>
<% end %>
</div>
<% if @results.length !=0 %>
<%  @results.each do |answer| %>
<div class="col" style="padding-left: 280px;padding-top: 10px;width: 1200px;">
<div class="card shadow-sm">
<%= link_to answer.title,answer_path(answer.id) %>
<%= answer.question %>

<%= answer.category.name %>
</div>
</div>
<% end %>
<% else %>
<h1>検索結果なし</h1>

<% end %>
<%= link_to '戻る', answers_path,class:"btn btn-sm btn-outline-third",style: "margin-left: 280px;" %>